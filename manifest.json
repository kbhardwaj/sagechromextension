{
   "name": "SageMob",
   "version": "2.3",
   "web_accessible_resources":[
      "scripts/wysihtml5-0.3.0.js", 
      "scripts/jquery-1.7.2.min.js", 
      "scripts/bootstrap.min.js", 
      "scripts/bootstrap-wysihtml5.js",
      "styles/bootstrap-wysihtml5.css",
      "styles/bootstrap.min.css",
      "styles/wysiwyg-color.css",
      "images/indent_increase.png",
      "images/indent_decrease.png",
      "images/list_ordered_decimal.png",
      "images/list_unordered.png",
      "images/youtube_alt.png",
      "images/picture.png",
      "images/link.png"
   ],
   "permissions": [
      "http://localhost:3000/api/v1/notebooks.json/",
      "http://localhost:3000/api/v1/tokens.json/",
      "http://www.sagemob.com/api/v1/notebooks.json/",
      "http://www.sagemob.com/api/v1/tokens.json/",
      "tabs",
      "activeTab",
      "https://api.thriftdb.com/api.hnsearch.com/items/*",
      "http://*/*",
      "https://*/*"
   ],

   "background": {
     "scripts": ["background.js"],
     "persistent": false
    },
    "browser_action": {
      "default_title": "Make this page red",
      "default_icon": "images/icon19.png"
    },
    "icons": {
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "manifest_version": 2
  }
